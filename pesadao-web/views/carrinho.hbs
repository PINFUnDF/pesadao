<!--Inicio do Carrrinho -->
<div class="container-carrinho">
  <div class="col-lg-2">
    <div class="titulo-cart">
      <h3>MEU CARRINHO</h3>
    </div>
  </div>
  <div class="col-lg-10 box-dados">
    <div class="endereco">
      <div class="titulo-div">
        <svg
          width="40"
          height="40"
          viewBox="0 0 16 9"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
        >
          <rect width="16" height="9" fill="url(#pattern0_2046_963)" />
          <defs>
            <pattern
              id="pattern0_2046_963"
              patternContentUnits="objectBoundingBox"
              width="1"
              height="1"
            >
              <use
                xlink:href="#image0_2046_963"
                transform="matrix(0.00625 0 0 0.0111111 0.21875 0)"
              />
            </pattern>
            <image
              id="image0_2046_963"
              width="90"
              height="90"
              xlink:href="data:image/png;base64,"
            />
          </defs>
        </svg>
        <h3>DADOS DE ENTREGA</h3>
      </div>
      <div class="inputs-dados">
        <div class="col-md-6 input-sep">
          <input type="text" placeholder="  Nome" />
          <input type="text" placeholder="  Número de Telefone" />
          <input type="text" placeholder="  CEP" />
        </div>
        <div class="col-md-6 input-sep">
          <input type="text" placeholder="  Endereço" />
          <input type="text" placeholder="  Bairro" />
          <input type="text" placeholder="  Cidade - Estado" />
        </div>
      </div>
    </div>

    <div class="pagamento">
      <svg
        width="30"
        height="20"
        viewBox="0 0 20 16"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
      >
        <rect width="20" height="16" fill="url(#pattern0_2046_980)" />
        <defs>
          <pattern
            id="pattern0_2046_980"
            patternContentUnits="objectBoundingBox"
            width="1"
            height="1"
          >
            <use
              xlink:href="#image0_2046_980"
              transform="matrix(0.00888889 0 0 0.0111111 0.1 0)"
            />
          </pattern>
          <image
            id="image0_2046_980"
            width="90"
            height="90"
            xlink:href="data:image/png;base64,"
          />
        </defs>
      </svg>
      <h3>MÉTODOS DE PAGAMENTO</h3>
      <div class="options-pay">
        <input type="button" value="PIX" />
        <input type="button" value="BOLETO" />
        <input type="button" value="CARTÃO" />
      </div>
    </div>

    <div class="resumo-compra">
      <div class="titulo-compras">
        <h3>RESUMO DO PEDIDO</h3>
      </div>
      <div class="titulos-infos">
        <span>Preço Unitário</span>
        <span>Quantidade</span>
        <span>Subtotal de Itens</span>
      </div>
    </div>

    <div class="produto-item">
      {{#if produtos.length}}
      <ul>
        {{#each produtos}}
        <div class="imagem-produto-2">
          <img
            src="images/roupas/{{this.imagem}}"
            alt=""
            class="produto-imagem"
          />
          <div class="parte-esquerda">
            <span class="produto-nome">{{this.name}}</span>
            <input
              type="button"
              value="Remover Produto"
              onclick="removeProduto('{{this.id}}')"
            />
          </div>
          <div class="tabela">
            <span>R$: {{this.preco}}</span>
            <!--Isto deve ser a quantidade de itens-->
            <span>{{this.quantidade}}</span>
            <!--Isto deve ser o preço * a qtd de itens-->
            <span>R$: {{this.precoTotalFormatted}}</span>
          </div>
        </div>
        {{/each}}
        <span class="precototal"
          >Preço total {{totalItens}} Itens:{{precoTotal}}</span
        >
        <div class="butoes-carrinho">
          <div class="continuar-comprando">
            <a href="/"><input type="button" value="CONTINUAR COMPRANDO" /></a>
          </div>
          <div class="finalizar-compra">
            <a href="/final"
              ><input type="button" value="FINALIZAR COMPRA"
            /></a>
          </div>
        </div>
      </ul>
      {{else}}
      <p>O carrinho está vazio.</p>
      {{/if}}
    </div>
  </div>
  <div class="col-lg-2"></div>
</div>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
  crossorigin="anonymous"
></script>
<script type="text/javascript" src="javascripts/carrinho.js"></script>
